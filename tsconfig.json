{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "target": "ES2016",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "jsx": "react",
    "noErrorTruncation": true,
  },
  "exclude": [
    "node_modules",
  ]
}
