{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,

    "jsx": "react",

    "noEmit": true,
    "incremental": true,

    "plugins": [{ "name": "readable-types" }]
  },
  "include": [
    "src",
    "__tests__"
  ],
  "exclude": ["node_modules"]
}
